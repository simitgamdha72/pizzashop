@model pizzashop.Models.ViewModels.CategoryViewModel

<!-- Modal for Editing Category -->
<div class="modal fade" style="margin-top: 13%;" id="editCategoryModal" tabindex="-1"
    aria-labelledby="editCategoryModallable" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form">
                    <form method="post" id="CategoryViewModel">
                        <!-- Hidden input to pass CategoryId -->
                        <input type="text" id="CategoryId" asp-for="Id" name="Id" value="@Model.Id" />

                        <div class="mb-3">
                            <label for="CategoryName" class="form-label">Category Name</label>
                            <input type="text" class="form-control" id="CategoryName" name="Category1"
                                asp-for="Category" value="@Model.Category" placeholder="Name">
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="Description" name="Description"
                                value="@Model.Description" asp-for="Description" placeholder="Description">
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary"
                                onclick="EditCategoryModalSave()">Save</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>