@model IEnumerable<pizzashop.Models.Models.Category>

<div class="offcanvas-lg start-0" data-bs-scroll="true" tabindex="-1" id="offcanvascategory">
    <div class="bg-light min-vh-100" style="width: 260px; display: flex; align-items: center; flex-direction: column;">
        <div class="justify-content-between w-100 p-3" style="display: flex; align-items: center;">
            <div class="fs-4 fw-semibold" style="color: #006CAC;">Category</div>
            <button class="customBtnSecondary fs-4 py-0 px-2" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
        <ul class="categorys flex-column mb-auto w-100" style="overflow-y: scroll; max-height: 400px;">
            @foreach (var Categories in Model)
            {
                    <li class="active">
                        <a href="#" class="nav-link d-flex me-auto">
                            <i class="bi bi-grid-1x2-fill" style="margin-right: 10px;"></i>
                            @Categories.Category1
                        </a>
                        <div class="categoryAction">
                            <div class="d-flex">
                                <button class="menubtn" data-bs-toggle="modal" data-bs-target="#editCategoryModal"
                                    data-id="@Categories.Id" data-category-name="@Categories.Category1"
                                    data-description="@Categories.Description">
                                    <i class="bi bi-pen"></i>
                                </button>
                                <button class="menubtn" data-bs-toggle="modal" data-bs-target="#delete"
                                    data-id="@Categories.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </li>
            }
        </ul>
    </div>
</div>

<!-- Modal for Delete Confirmation -->
<div class="modal fade" style="margin-top: 13%;" id="delete" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title fs-5" id="exampleModalLabel">Delete Confirmation</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
                <div style="color: #ffc409;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                        class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0="1" 1 0 1 0 0 2 1 1 0 0 1 0-2"/>
                    </svg>
                </div>
                <p>Are you sure you want to delete this category?</p>
                <div class="modal-footer">
                    <form id="deleteForm" method="post" asp-controller="Category" asp-action="deletecategory">
                        <input type="hidden" id="categoryId" name="id" />
                        <button type="submit" class="btn btn-primary">Yes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Editing Category -->
<div class="modal fade" style="margin-top: 13%;" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModallable" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Category" asp-action="EditCategory" method="post">
                    <input type="hidden" id="CategoryId" name="Id" />
                    <div class="mb-3">
                        <label for="CategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="CategoryName" name="Category1" placeholder="Name">
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="Description" name="Description" placeholder="Description">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
