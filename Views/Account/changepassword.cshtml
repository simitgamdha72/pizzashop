@model pizzashop.Models.ViewModels.ChangePasswordViewModel
<div style="width: 100%;background-color: #f3f3f3;margin-top: 40px;">
    <div class="userlist-searchbar"
        style="display: flex; width: 100%;height: 7%;justify-content: space-between;padding-top: 10px;align-items: center;">
        <h1 style="margin-left: 3%;color: #006cac;">Change Password</h1>

    </div>
    <div class="content" style="display: flex;align-items: center;padding-top: 40px;">
        <div style="width: 600px;margin-left: 10%;margin-right: 5%;">

            <form asp-action="changepassword" method="post" style="padding-left: 17%;">



                <p style="color: #84878d;font-size: 13px;">Enter a new password to update your account credentials</p>
                <div style="padding-bottom: 15px;" class="form-group">

                    <input type="password" asp-for="Password"
                        class="login-credents form-control form-control-lg rounded-1" placeholder="password*">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <div style="padding-bottom: 15px;">

                    <input type="password" asp-for="newPassword"
                        class="login-credents form-control form-control-lg rounded-1" placeholder="New Password*">
                    <span asp-validation-for="newPassword" class="text-danger"></span>
                </div>
                <div>
                    <input type="password" asp-for="ConfirmPassword"
                        class="login-credents form-control form-control-lg rounded-1"
                        placeholder="Confirm New password*">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div style="padding-top: 17px;display:flex">
                    <button class="loginpage-btn" type="submit" style="width: 100px;">Submit</button>
                    <button class="" type="restart"
                        style="width: 100px;margin-left: 5px;color:#006cac;border:1px solid #006cac;">Cancel</button>
                </div>




            </form>
        </div>
    </div>
</div>
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}