@model pizzashop.Models.ViewModels.ForgotPasswordViewModel
@{
    Layout = null; // No layout applied for this page
    var usernotexist = TempData["usernotexist"] as string;
    var emailIsSent = TempData["emailIsSent"] as string;
    var cookieIsNull = TempData["cookieIsNull"] as string;
}
}

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
</head>

<body style="height: 100vh;font-family: Roboto;">

    <!-- fullscreen div -->

    <div class="container-fluid">
        <div class="row">

            <!-- leftside-image -->

            <div class="col-6 loginpage-image-container">
                <img src="~/images/dominos_background.jpg" class="loginpage-image" alt=""
                    style="width: 100%;height: 100%;">
            </div>

            <!-- rightside form -->

            <div class="col-6 loginpage-formdiv">
                <div class="login-box" style="width: 100%;">

                    <!-- pizzashop_logo -->

                    <div class="pizzashop-loginpage-logo"><img src="~/images/logos/pizzashop_logo.png" alt=""
                            style="height: 50px;">&nbsp;&nbsp;<span
                            style="font-weight: 700;font-size: 30px;color: #006cac;">PIZZASHOP</span></div>

                    <form asp-action="forgotpassword" method="post" style="padding-left: 17%;">
                        <p class="loginpage-wlcm-txt" style="">Forgot Password,</p>
                        <div style="padding-top: 7px;color: slategrey;width: 80%;">
                            <p>Enter your email and we'll send you a link to reset your password.</p>
                        </div>
                        <div style="padding-bottom: 15px;">
                            <input type="email" asp-for="Email"
                                class="login-credents form-control form-control-lg rounded-1" name="Email" value="Email"
                                id="email" placeholder="email*">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                        <div style="padding-top: 5px;">
                            <button class="loginpage-btn" type="submit">Send</button>
                        </div>
                        <div style="display: flex;justify-content: center;padding-right: 20%;padding-top: 10px;"><a
                                class="nav-link" href="@Url.Action("Index", "Account")" style="color: #006cac;">Back to
                                login</a></div>
                    </form>

                    <script>
                        // Capture email from the query parameter
                        const urlParams = new URLSearchParams(window.location.search);
                        const email = urlParams.get('email');

                        // Set the email field value
                        if (email) {
                            document.getElementById('email').value = email;
                        }
                    </script>

                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(usernotexist))
    {
        <script>
            toastr.error('@usernotexist');  // Display the error message using Toastr
        </script>
    }
    @if (!string.IsNullOrEmpty(emailIsSent))
    {
        <script>
            toastr.success('@emailIsSent');  // Display the error message using Toastr
        </script>
    }
    @if (!string.IsNullOrEmpty(cookieIsNull))
    {
        <script>
            toastr.error('@cookieIsNull');  // Display the error message using Toastr
        </script>
    }

</body>

</html>