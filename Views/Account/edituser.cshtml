                            </div> *@

            <div class="row container-fluid">
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">

                    @* <select id="country" class="form-control">
                                        <option value="">United States</option>
                                    </select> *@
                    <select asp-for="CountryId" class="form-control" id="CountryId" required>
                        <option value="">Select Country</option>
                        @foreach (var country in ViewBag.Countries as List<Country>)
                        {
                            <option value="@country.Id">@country.Country1</option>
                        }
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>


                </div>
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">

                    @* <select id="state" class="form-control">
                                        <option value="">Texas</option>
                                    </select> *@
                    <select asp-for="StateId" class="form-control" id="StateId" required>
                        <option value="">Select State</option>
                        @* <option value="" selected>@ViewBag.state</option> *@
                    </select>
                    <span asp-validation-for="StateId" class="text-danger"></span>


                </div>
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">

                    @* <select id="city" class="form-control">
                                        <option value="">Housten </option>
                                    </select> *@
                    <select asp-for="CityId" class="form-control" id="CityId" required>
                        <option value="">Select City</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>

                </div>

            </div>




            <div class="row container-fluid">
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">
                    <input asp-for="Zipcode" type="number" class="form-control" id="floatingInputzipcode"
                        placeholder="name@example.com" required>
                    <label for="floatingInputzipcode" style="margin-left: 10px;">Zipcode</label>
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">
                    <input asp-for="Address" type="text" class="form-control" id="floatingInputadress"
                        placeholder="name@example.com" required>
                    <label for="floatingInputadress" style="margin-left: 10px;">Adress</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">
                    <input asp-for="Phone" type="number" class="form-control" id="floatingInputphone"
                        placeholder="name@example.com" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <label for="floatingInputphone" style="margin-left: 10px;">Phone</label>
                </div>

            </div>

            <div style="margin-top: 20px;margin-bottom: 20px;margin-left: 10px;">
                <button type="submit" class="btn" style="background-color: #006cac;color: white;">Update</button>
                <button type="reset" class="btn"
                    style="background-color: white;border: 1px solid #006cac;color: #006cac;">cancel</button>

            </div>

        </form>

    </div>

</div>




@section Scripts {

    <script>

        $(document).ready(function () {
            console.log("helo")
            // Trigger the state dropdown when country is selected
            $("#CountryId").change(function () {
                console.log("hello");
                var countryId = $(this).val();
                console.log(countryId);
                if (countryId) {
                    $.get("/Account/GetStatesByCountry?countryId=" + countryId, function (data) {
                        $("#StateId").empty().append('<option value="">Select State</option>');

                        $.each(data, function (index, state) {
                            console.log(index, state);
                            $("#StateId").append('<option value="' + state.value + '">' + state.text + '</option>');
                        });
                        $("#CityId").empty().append('<option value="">Select City</option>');
                    });
                } else {
                    $("#StateId").empty().append('<option value="">Select State</option>');
                    $("#CityId").empty().append('<option value="">Select City</option>');
                }
            });

            // Trigger the city dropdown when state is selected
            $("#StateId").change(function () {
                var stateId = $(this).val();
                if (stateId) {
                    $.get("/Account/GetCitiesByState?stateId=" + stateId, function (data) {
                        $("#CityId").empty().append('<option value="">Select City</option>');
                        $.each(data, function (index, city) {
                            $("#CityId").append('<option value="' + city.value + '">' + city.text + '</option>');
                        });
                    });
                } else {
                    $("#CityId").empty().append('<option value="">Select City</option>');
                }
            });
        });
    </script>

}