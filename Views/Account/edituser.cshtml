@model pizzashop.Models.ViewModels.EditUserViewModel
<div
    style="display: flex; width: 100%;height: 7%;justify-content: space-between;padding-top: 50px;align-items: center;">
    <h1 style="margin-left: 5.2%;color: #006cac;">Edit User</h1>
    <div style="padding-right: 5.2%;">
        <a href="@Url.Action("userlist", "Account")"><button
