                    <select asp-for="RoleId" id="role" class="form-control" required>
                        <option value="1">Admin</option>
                        <option value="2">Account Manager</option>
                        <option value="3">Chef</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                    <label for="role" style="margin-left: 10px;">Role</label>

                </div>

            </div>
            <div class="row container-fluid">
                <div class="form-floating col adduser-form-coloumn " style="margin-top: 15px;">
                    <input asp-for="Email" type="email" disabled class="form-control" id="floatingInputemail"
                        placeholder="name@example.com">
                    <input asp-for="Email" type="hidden" class="form-control" id="floatingInputemail"
                        placeholder="name@example.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label for="floatingInputemail" style="margin-left: 10px;">Email</label>
                </div>
                <div class="form-floating col adduser-form-coloumn " style="margin-top: 15px;">
                    <select asp-for="Status" class="form-control" required>
                        <option value="null">status</option>
                        <option value="true">Active</option>
                        <option value="false">InActive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                @* <div class="form-floating col adduser-form-coloumn " style="margin-top: 15px;">
                                    <input asp-for="Password" type="password" class="form-control" id="floatingInputpass"
                                        placeholder="name@example.com">
                                    <label for="floatingInputpass" style="margin-left: 10px;">password</label>
                                </div> *@

            </div>
            @* <div
                                style="margin-top: 10px;border: 1px dotted black; width: 97%;height: 90px;margin-left: 0.8%;justify-content: center;align-items: center;">
                                <div>
                                    <div style="display: flex;margin-top: 5px;" class=" justify-content-center align-items-center">
