@model pizzashop.Models.ViewModels.ResetPasswordViewModel
@{
    Layout = null; // No layout applied for this page
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body style="height: 100vh;font-family: Roboto;">

    <!-- fullscreen div -->

    <div class="container-fluid">
        <div class="row">

            <!-- leftside-image -->

            <div class="col-6 loginpage-image-container">
                <img src="~/images/dominos_background.jpg" class="loginpage-image" alt=""
                    style="width: 100%;height: 100%;">
            </div>

            <!-- rightside form -->

            <div class="col-6 loginpage-formdiv">
                <div class="login-box" style="width: 100%;">

                    <!-- pizzashop_logo -->

                    <div class="pizzashop-loginpage-logo"><img src="~/images/logos/pizzashop_logo.png" alt=""
                            style="height: 50px;">&nbsp;&nbsp;<span
                            style="font-weight: 700;font-size: 30px;color: #006cac;">PIZZASHOP</span></div>

                    <form asp-action="ResetPassword" method="post" style="padding-left: 17%;">

                       
                        
                        <p class="loginpage-wlcm-txt" style="">Reset Your Password,</p>
                         @* <div style="padding-bottom: 15px;" class="form-group">

                            <input type="email" asp-for="Email"
                                class="login-credents form-control form-control-lg rounded-1" id="email" name="email"
                                placeholder="email*" required>
                            <span asp-validation-for="Email" class="text-danger"></span>


                        </div> *@
                        <div style="padding-bottom: 15px;">

                            <input asp-for="Password" type="password" class="login-credents form-control form-control-lg rounded-1" placeholder="New Password*"
                                 required>
                                 <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div>
                            <input asp-for="ConfirmPassword" type="password" class="login-credents form-control form-control-lg rounded-1"
                                placeholder="Confirm New password*" required>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div style="padding-top: 17px;">
                            <button class="loginpage-btn" type="submit" >Submit</button>
                        </div>

                         

                        <div style="display: flex;justify-content: center;padding-right: 20%;padding-top: 10px;">
                            <a
                                class="nav-link" href="loginpage.html" style="color: #006cac">Back to login</a>
                                </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>

</html>