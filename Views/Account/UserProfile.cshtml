@model pizzashop.Models.ViewModels.UserProfileViewModel

<div id="rolesPageContent" class="container-fluid px-3 py-4 p-md-5">

    <div class="fs-2 fw-semibold mb-3" style="color: #006CAC;">My Profile</div>

    <div class="secondaryContainer shadow p-0">
        <img class="object-fit-cover" src="~/images/profile_div_bg.jpg" width="100%" height="50px">
        <div class="d-flex w-100 px-2 px-md-4">
            <div class="position-relative">
                <img style="margin-top: -1.8rem; border-radius: 50%;"
                    src="https://th.bing.com/th?id=OIP.sDGudWbPLYyfB9reTqQ6kgHaHa&w=250&h=250&c=8&rs=1&qlt=90&r=0&o=6&pid=3.1&rm=2"
                    id="imagePreview" height="125px" width="125px">
                <div class="" style="position: absolute;/* height: 306px; */top: 51px;right: -2px;">
                    <input class=" d-none form-control" type="file" id="imageUpload" required>
                    <label class="profileImgUpload" for="imageUpload">
                        <i class="bi bi-camera"></i>
                    </label>
                </div>
            </div>
            <div class="d-flex flex-column flex-md-row text-end text-md-start w-100 ms-md-3 py-1 py-md-2">
                <div class="me-md-auto">
                    <div class="fs-4 fw-semibold">
                        @Model.FirstName @Model.LastName
                    </div>
                    <div class="">
                        @Model.FirstName
                    </div>
                </div>
                <div class="">@Model.Email</div>
            </div>
        </div>
        <form asp-action="UserProfile" method="post" class="p-2 p-sm-3 p-md-4">
            <div class="row row-cols-1 row-cols-md-2 g-3">
                <div class="col">
                    <div class="form-floating">
                        <input type="text" asp-for="FirstName" value="@Model.FirstName" class="form-control" id="fname"
                            placeholder="First Name">
                        <label for="fname">First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <input type="hidden" asp-for="Email" value="@Model.Email">


                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text" asp-for="LastName" value="@Model.LastName" class="form-control" id="lname"
                            placeholder="Last Name">
                        <label for="lname">Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>


                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text" asp-for="UserName" value="@Model.UserName" class="form-control" id="uname"
                            placeholder="User Name">
                        <label for="uname">User Name</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>


                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input type="text" asp-for="Phone" value="@Model.Phone" class="form-control" id="phone"
                            placeholder="Phone">
                        <label for="phone">Phone</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>


                    </div>
                </div>
            </div>
            <div class="row container-fluid">
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">

                    @* <select id="country" class="form-control">
                                        <option value="">United States</option>
                                    </select> *@
                    @* <select asp-for="CountryId" class="form-control" id="CountryId">
                        <option value="">Select Country</option>
                        @foreach (var country in ViewBag.Countries as List<Country>)
                        {
                            <option value="@country.Id">@country.Country1</option>
                        }
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span> *@

                    <select asp-for="CountryId" class="form-control" id="CountryId">
                        <option value="">Select Country</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>




                </div>
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">

                    @* <select id="state" class="form-control">
                                        <option value="">Texas</option>
                                    </select> *@
                    <select asp-for="StateId" class="form-control" id="StateId">
                        <option value="">Select State</option>
                    </select>
                    <span asp-validation-for="StateId" class="text-danger"></span>




                </div>
                <div class="form-floating col adduser-form-coloumn2" style="margin-top: 15px;">

                    @* <select id="city" class="form-control">
                                        <option value="">Housten </option>
                                    </select> *@
                    <select asp-for="CityId" class="form-control" id="CityId">
                        <option value="">Select City</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>



                </div>

            </div>
            <div class="row gy-3 gx-4 mt-0">
                <div class="col-12 col-lg-8">
                    <div class="form-floating">
                        <input type="text" asp-for="Address" value="@Model.Address" class="form-control" id="address"
                            placeholder="Address">
                        <label for="address">Address</label>
                        <span asp-validation-for="Address" class="text-danger"></span>


                    </div>
                </div>
                <div class="col d-none d-lg-block">
                    <div class="form-floating">
                        <input type="text" asp-for="Zipcode" value="@Model.Zipcode" class="form-control" id="zipcode"
                            placeholder="Zipcode">
                        <label for="zipcode">Zipcode</label>
                        <span asp-validation-for="Zipcode" class="text-danger"></span>


                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center mt-4">
                <button type="submit" class="customBtnPrimary me-2">Update</button>
                <button type="reset" class="customBtnSecondary">cancel</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function () {
            console.log("helo")

            $.ajax({
                url: '@Url.Action("GetCountries", "Account")',
                type: 'GET',
                success: function (data) {
                    let countryDropdown = $('#CountryId');
                    $.each(data, function (i, country) {
                        if (@Model.CountryId != null && i == @Model.CountryId -1) {
                            countryDropdown.append('<option value="' + country.id + '" selected>' + country.country1 + '</option>');
                        }
                        else {
                            countryDropdown.append('<option value="' + country.id + '">' + country.country1 + '</option>');
                        }
                    });
                }
            });
            // Trigger the state dropdown when country is selected
            $("#CountryId").change(function () {
                console.log("hello");
                var countryId = $(this).val();
                console.log(countryId);
                if (countryId) {
                    $.get("/Account/GetStatesByCountry?countryId=" + countryId, function (data) {
                        $("#StateId").empty().append('<option value="">Select State</option>');

                        $.each(data, function (index, state) {
                            console.log(index, state);
                            $("#StateId").append('<option value="' + state.value + '">' + state.text + '</option>');
                        });
                        $("#CityId").empty().append('<option value="">Select City</option>');
                    });
                } else {
                    $("#StateId").empty().append('<option value="">Select State</option>');
                    $("#CityId").empty().append('<option value="">Select City</option>');
                }
            });

            // Trigger the city dropdown when state is selected
            $("#StateId").change(function () {
                var stateId = $(this).val();
                if (stateId) {
                    $.get("/Account/GetCitiesByState?stateId=" + stateId, function (data) {
                        $("#CityId").empty().append('<option value="">Select City</option>');
                        $.each(data, function (index, city) {
                            $("#CityId").append('<option value="' + city.value + '">' + city.text + '</option>');
                        });
                    });
                } else {
                    $("#CityId").empty().append('<option value="">Select City</option>');
                }
            });
        });
    </script>

}